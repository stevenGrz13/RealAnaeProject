@{
    ViewBag.Title = "title";
    Layout = "_LayoutGlobalProject";
    Technicien t = ViewData["technicien"] as Technicien;
    SiteSousActivite st = ViewData["sitesousactivite"] as SiteSousActivite;
    TypeIndicateur tp = ViewData["indicateur"] as TypeIndicateur;
}

<div class="container mt-4">
    <h4>Site: @st.Libelle</h4>
    
    <p>Technicien: @t.Email</p>
    <p>Indicateur: @tp.Nom</p>

    <form action="/BackOfficeSousActivite/Create" class="mt-4">
        <input type="hidden" name="idsitesousactivite" value="@st.Id">
        <input type="hidden" name="idtechnicien" value="@t.Id">
        <input type="hidden" name="idindicateur" value="@tp.Id">
        
        <div class="form-group">
            <input type="text" name="quantite" class="form-control" placeholder="Quantité">
        </div>
        
        <div class="form-group">
            <input type="date" name="dateaction" class="form-control">
        </div>
        
        <button type="submit" class="btn btn-primary">Insérer</button>
    </form>
</div>