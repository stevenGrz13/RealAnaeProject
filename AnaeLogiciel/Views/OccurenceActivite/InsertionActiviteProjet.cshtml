@{
    ViewBag.Title = "title";
    Layout = "_LayoutGlobalProject";
    Projet projet = ViewData["projet"] as Projet;
    List<Activite> listeactivite = ViewData["listeactivite"] as List<Activite>;
    List<SourceDeVerification> listesource = ViewData["listesourcedeverification"] as List<SourceDeVerification>;
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-searchbox/1.2.5/jquery.searchbox.min.js"></script>

@ViewBag.messageerreur

<br>

PROJET: 
@projet.Nom

<br>

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            background-color: #007BFF;
            color: #fff;
            padding: 10px;
            border-radius: 5px;
        }

        form {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }

        label {
            font-weight: bold;
        }

        select, input[type="date"], input[type="text"], input[type="checkbox"], input[type="submit"] {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        select {
            height: 36px;
        }

        input[type="checkbox"] {
            width: auto;
        }

        input[type="submit"] {
            background-color: #007BFF;
            color: #fff;
            cursor: pointer;
        }
    </style>
<body>
    <h2>INSERTION ACTIVITE PROJET</h2>

<form method="post" action="@Url.Action("InsertionGlobalActiviteProjet", "OccurenceActivite")">
    <input type="hidden" name="idprojet" value="@projet.Id">

    <label for="idactivite">ACTIVITE:</label>
    <select name="idactivite" id="idactivite" required>
            @foreach (var v in listeactivite)
            {
                <option value="@v.Id">@v.Nom</option>
            }
        </select>
    <script>
    $(function(){
      $('#idactivite').searchbox();
    });
    </script>

    <br>

    <label for="datedebutprevision">DATE DEBUT PREVISION:</label>
    <input type="date" name="datedebutprevision" id="datedebutprevision" required>

    <br>

    <label for="datefinprevision">DATE FIN PREVISION:</label>
    <input type="date" name="datefinprevision" id="datefinprevision" required>

    <br>

    <label for="budget">BUDGET:</label>
    <input type="text" name="budget" id="budget">

    <br>

    <label>SOURCES DE VERIFICATIONS:</label>
    <br>
    @foreach (var x in listesource)
    {
        <label>
            @x.Nom
            <input type="checkbox" name="listesource" value="@x.Id">
        </label><br>
    }

    <br>

    <input type="submit" name="AJOUTER">
</form>
</body>