@{
    ViewBag.Title = "Title";
    Layout = "_LayoutGlobalProject";
    int idoccurencesousactivite = ViewBag.idoccurencesousactivite;
    List<PaiementOccurenceSousActivite> liste = ViewData["listepaiement"] as List<PaiementOccurenceSousActivite>;
    double reste = ViewBag.reste;
    double budget = ViewBag.budget;
    double total = ViewBag.total;
    int idoccurenceactivite = ViewBag.idoccurenceactivite;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <form action="/PaiementSousActivite/VersInsertionPaiementSousActivite">
            <input type="hidden" name="idoccurencesousactivite" value="@idoccurencesousactivite">
            <button type="submit" class="btn btn-primary">Ajouter un Mouvement</button>
        </form>

        <h3 class="mt-4">LISTE DES MOUVEMENTS</h3>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Technicien</th>
                    <th>Motif</th>
                    <th>Montant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in liste)
                {
                    <tr>
                        <td>@v.Technicien.Email</td>
                        <td>@v.Motif</td>
                        <td>@v.Montant.ToString("N0") Ar</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td class="font-weight-bold">@total.ToString("N0") Ar</td>
                </tr>
            </tbody>
        </table>

        <p><strong>Budget:</strong> @budget.ToString("N0") Ar</p>
        <p><strong>Reste:</strong> @reste.ToString("N0") Ar</p>
        <p class="text-danger"><strong>@ViewBag.messageerreur</strong></p>
    </div>
<br>
<form action="/OccurenceSousActivite/RetourVersListeOccurenceSousActivite">
    <input type="hidden" name="idoccurenceactivite" value="@idoccurenceactivite">
    <button type="submit" class="btn btn-secondary">Retour</button>
</form>
<br>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
