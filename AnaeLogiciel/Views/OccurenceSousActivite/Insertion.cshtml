@{
    ViewBag.Title = "title";
    int idoccurenceactivite = ViewBag.idoccurenceactivite;
    Layout = "_LayoutGlobalProject";
}

<p style="color: red;">@ViewBag.messageerreur</p>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form action="/OccurenceSousActivite/Create" method="post" class="my-4">
                <input type="hidden" name="idoccurenceactivite" value="@idoccurenceactivite">
                <div class="form-group">
                    <label for="details">Nom:</label>
                    <textarea class="form-control" id="details" name="details" rows="4"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="datedebut">Date Début:</label>
                    <input type="date" name="datedebut" id="datedebut" class="form-control" placeholder="Date Début">
                </div>
                
                <div class="form-group">
                    <label for="datefin">Date Fin:</label>
                    <input type="date" name="datefin" id="datefin" class="form-control" placeholder="Date Fin">
                </div>
                
                <div class="form-group">
                    <label for="budget">Budget:</label>
                    <input type="text" name="budget" id="budget" class="form-control" placeholder="Budget">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </form>
        </div>
    </div>
</div>
<br>
<form action="/OccurenceSousActivite/ListeOccurenceSousActivite">
    <input type="hidden" name="idoccurenceactivite" value="@idoccurenceactivite">
    <button type="submit" class="btn btn-secondary">Retour</button>
</form>